<div class="code-block">
	{% include 'components/code-block/header.twig' with { title: 'Drawer' } %}
	<div class="code-block__preview">
		{% include 'components/drawer/drawer.twig' %}
	</div>
	<div class="code-block__container code-block__hidden">
		<div class="code-block__wrapper">
			<div class="code-block__highlight">
				<div class="code-block__btn js-lang-tab active" data-lang-btn="markup">HTML</div>
				<div class="code-block__btn js-lang-tab" data-lang-btn="scss">SCSS</div>
				<div class="code-block__btn js-lang-tab" data-lang-btn="js">JS</div>
				<button type="button" name="copy code to clipboard" class="code-block__btn js-copy-btn">Copy</button>
			</div>
		</div>
		<pre class="active" data-lang="markup"><code class="language-markup">{% filter escape %}{% include 'components/drawer/drawer.twig' %}{% endfilter %}</code></pre>
		<pre data-lang="scss" data-src="{{ theme.link }}/src/scss/app/drawer.scss"></pre>
		<pre data-lang="js" data-src="{{ theme.link }}/src/js/app/Drawer.js"></pre>
	</div>
</div>